@model IEnumerable<AdventurousContacts.Models.Contact>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <h1>Äventyrliga kontakter</h1>
    <div id="newContactLink">
        @Html.ActionLink("Skapa ny kontakt", "Create")
    </div>
    <div id="contacts">
        @foreach (var item in Model)
        {
            <div class="contact-card">
                <p>
                    @item.FirstName
                </p>
                <p>
                    @item.LastName
                </p>
                <p>
                    @item.EmailAddress
                </p>
                <div class="edit-details">
                    @Html.ActionLink("Redigera", "Edit", new { id = item.ContactID })
                    @Html.ActionLink("Ta bort", "Delete", new { id = item.ContactID })
                </div>
                <div class="clearfix">
                </div>
            </div>
        }
        <div class="clearfix">
        </div>
    </div>
</div>